{
  "compilerOptions": {
    // Compilation Configuration
    "target": "es2017",
    "inlineSources": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "baseUrl": "lib",
    "rootDir": "lib",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    // Enhance Strictness
    "strict": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "newLine": "LF",
    "allowJs": true
  },
  "include": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".vscode"
  ]
}
